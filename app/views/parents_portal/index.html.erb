<h1>Welcome, parents!</h1>
<%= form_tag parents_portal_index_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
<h2> Found Items: </h2>
<% @foundItems.each do |item| %>
<!-- @items= varable, .each do means do the code below for all the thing in items -->
<h4> <%= link_to "#{item.name}", item %></h4>
<ul>
  <li> <%= item.description %> </li>
  <li> Color: <div style="height: 20px; width: 20px; border: 1px solid black; background-color: <%= item.color %>; display: inline-block"> </div> </li>
</ul>
<% end %>
<%= link_to 'New item', new_item_path %>
