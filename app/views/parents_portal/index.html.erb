<h1>Welcome, parents!</h1>
<%= render "shared/search", :pagePath => parents_portal_index_path %>
<h2> Found Items: </h2>
<% sortByDate(@foundItems).reverse!.each do |item| %>
<!-- @items= varable, .each do means do the code below for all the thing in items -->
<h4> <%= link_to "#{item.name}", item %> <%= formattedDate(item.created_at) %></h4>
<ul>
  <li> <%= item.description %> </li>
  <li> Color: <div style="height: 20px; width: 20px; border: 1px solid black; background-color: <%= item.color %>; display: inline-block"> </div> </li>
</ul>
<% end %>
<%= link_to 'New item', new_item_path %>
